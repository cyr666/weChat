  box-sizing: border-box;
  padding: 0 0 0 30rpx;
  background: #fff;
  margin-top: 40rpx;
}
.list_item{
  height: 88rpx;
  border-bottom: 1px solid #E5E5E5;
}
.icon,.icon_title{
  margin-top: 23rpx;
}
