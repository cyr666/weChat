.btns{
  overflow: hidden;
}
.noBtn{
  margin-right: 2%;
}
.yesBtn{
  color: #008EFF;
}
.personal_con{
  overflow: hidden;
  height: 176rpx;
  width:100%;
  background: #fff;
  box-sizing: border-box;
  padding: 32rpx 30rpx;
  margin-top: 20rpx;
}
.avatarUrl_con{
  float: left;
  width: 112rpx;
  height: 112rpx;
  margin-right: 30rpx;
  border-radius: 55rpx;
}
.avatarUrl_img{
  width: 112rpx;
  height: 112rpx;
  border-radius: 55rpx;
}
.nickName{
  float: left;
  font-size: 40rpx;
  color: #000;
  margin-top: 28rpx;
}
.unlisted{
  float: left;
  margin-top: 11rpx;
}
.log_word{
  font-size: 36rpx;
  color: #008EFF;
  line-height:50rpx;
}
button{
  display: inline-block;
  border: none;
  padding: 0;
  margin: 0;
  background: #fff;
  border-radius: 0px;
}
button::after{
  border:none;
  padding: 0;
}
.button-hover{
  background:#fff; 
}
.unlisted_bot{
  font-size: 24rpx;
  color: #999999;
  line-height:33rpx;
}
/* 公司信息 */
