page{
  background:rgba(244,244,244,1);
}
.index_header{
  width: 100%;
  box-sizing: border-box;
  padding-top: 10px;
  position: relative;
  height:112rpx;
  background:rgba(255,255,255,1);
}
.index_input{
  box-sizing: border-box;
  padding: 0 10px;
  display: block;
  background: #fff;
  margin: 0px 130rpx 0px 30rpx;
  height: 68rpx;
  border: 1px solid #ddd;
  border-radius: 4px;
}
.search_btn{
  box-sizing: border-box;
  padding: 10rpx 20rpx; 
  background: #008EFF;
  position: absolute;
  top: 10px;
  right: 30rpx;
  width: 120rpx;
  height: 68rpx;
  font-size: 32rpx;
  text-align: center;
  color: #fff;
  border-radius: 0 5px 5px 0;
}
.phcolor{
  font-size: 28rpx;
  color: #B2B2B2;
}
.hotSearch_con{
  margin-top: 20rpx;
  background: #fff;
}
.hotSearch_word{
  height: 64rpx;
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #AAAAAA;
  line-height: 64rpx;
  border-bottom: 1px solid #E8E8E8 
}
.hotSearch_text{
  box-sizing: border-box;
  padding: 30rpx 30rpx 10rpx 30rpx;

}
.hotSearchText{
  display: inline-block;
  box-sizing: border-box;
  padding: 14rpx 16rpx;
  margin: 0 20rpx 20rpx 0;
  background: #F8F8F8;
  color: #353535;
  font-size: 28rpx;
}
.search_meau{
  position: fixed;
  top: 47px;
  left: 30rpx;
  width: 690rpx; 
  height:224px;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(0,0,0,0.3);
  border-radius:10px;
  border:1px solid rgba(230,230,234,1);
  z-index: 4;
}
.search_item{
  box-sizing: border-box;
  padding:0 20rpx;
  width: 690rpx;
  height: 44.5px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border-bottom: 1px solid #E8E8E8;
  font-size: 28rpx;
  color: #353535;
  line-height: 44.5px;
}
/* 历史搜索记录 */
.searchHistory_con{
  margin-top: 21rpx;
  background: #fff;
}
.searchHistory_head{
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #AAAAAA;
  line-height: 64rpx;
  border-bottom: 1px solid #E8E8E8;
}
.searchHistory_item{
  box-sizing: border-box;
  height: 88rpx;
  padding: 0 30rpx;
  overflow: hidden;
  border-bottom: 1px solid #E8E8E8;
}
.com_name{
  float: left;
  width: 612rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
  color: #353535;
  margin-top: 26rpx;
}
.close{
  float: right;
  width: 24rpx;
  height: 24rpx;
  margin: 32rpx 0 0 54rpx;
}
.delete_con{
  position: absolute;
  bottom: 44rpx;
  background: #fff;
  width: 100%;
  height: 98rpx;
}
.deleteImg{
  width: 30rpx;
  height: 28rpx;
  float: left;
  margin: 35rpx 5rpx 0 230rpx;
}
.delete_letter{
  float: left;
  font-size: 32rpx;
  color: #888888;
  margin-top: 26rpx;
}