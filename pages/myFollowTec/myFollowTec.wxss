page{
  box-sizing: border-box;
  padding: 30rpx;
  background: #F4F4F4;
}
.collect_item{
  box-sizing: border-box;
  padding: 40rpx 30rpx 40rpx 40rpx;
  background: #fff;
  border-radius:10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  position: relative;
  display: flex;
}
.item_top{
  overflow: hidden;
}
.collect_name{
  width: 70%;
}
.collectImg_con{
  float: left;
  width: 98rpx;
  height: 98rpx;
  margin-right: 30rpx;
}
.collectImg{
  width: 98rpx;
  height: 98rpx;
}
.collect_title_con{
  width: 470rpx;
  float: left;
  font-size:36rpx;
  color:rgba(51,51,51,1);
  position: relative;
}
.collect_date{
  font-size:24rpx;
  color:#B2B2B2;
  line-height:24rpx;
  position: absolute;
  right: 0;
  top: 10rpx;
}
.collect_type{
  width: 108rpx;
  height: 38rpx;
  vertical-align: middle;
  margin-top: -6rpx;
}
.collect_title_bot{
  font-size: 28rpx;
  color: #888888;
  margin-top: 12rpx;
}
.collectItem_bottom{
  clear: both;
  margin-top: 30rpx;
  width: 100%;
  font-size:24rpx;
  color:rgba(178,178,178,1);
}
.collect_time{
  display: inline-block;
  margin-left: 30rpx;
}
/* 暂无收藏 */
.noCollect_con{
  width: 334rpx;
  text-align: center;
  margin: 378rpx 190rpx;
}
.noCollect{
  width: 334rpx;
  height: 240rpx;
}
.noCollect_title{
  font-size: 30rpx;
  color: #AFBAC6;
  margin-top: 30rpx;
}
.right_box{
  display: flex;
  float: right;
  align-items: center;
  justify-content: center;
}
.collect_item_right{
  display: inline-block;
  width:12rpx;
  height:12rpx;
  background:rgba(249,96,96,1);
  border-radius: 6rpx;
}