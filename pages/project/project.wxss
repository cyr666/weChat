page{
  background: #f4f4f4;
}
.project_top{
  width: 100%;
  height: 94rpx;
  background: #fff;
  border-bottom: 1px solid #E5E5E5;
  text-align: center;
  
}
.project_top text{
  display: inline-block;
  width: 56rpx;
  height: 94rpx;
  /* border-bottom: 4rpx solid #008EFF */
}
.project_all{
  margin-right: 130rpx;
}
button{
  display: inline-block;
  border: none;
  font-size: 28rpx;
  line-height: 92rpx;
  color: #353535;
  padding: 0;
  margin: 0;
  background: #fff;
  border-radius: 0px;
}
.project_onlyStyle{
  color: #008EFF!important;
  border-bottom: 4rpx solid #008EFF;
}
button::after{
  border:none;
}
.button-hover{
  background:#fff; 
}
.textStyle{
  border-bottom: 4rpx solid #008EFF
}
/* 列表样式 start*/
.list_item{
  width: 670rpx;
  padding: 40rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.head_con{
  box-sizing: border-box;
  padding: 0rpx 0rpx 0 0rpx;
  width: 100%;
  overflow: hidden;
}
.headImg_con,.name_con{
  float: left;
  overflow: hidden;
}
.headImg_con{
  width: 67rpx;
  height: 68rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
}
.headLogo{
  width: 67rpx;
  height: 67rpx;
}
.jigou_name{
  font-size: 30rpx;
  color: #333333;
}
.jigou_time{
  font-size: 24rpx;
  color: #B2B2B2;
}
.pv_word{
  display: inline-block;
  margin-left: 30rpx;
}
.item_img{
  width: 670rpx;
  height: 280rpx;
  display: block;
  margin-top: 30rpx;
}
.title_type_view{
  margin-top: 30rpx;
  font-size: 36rpx;
  color: #333;
}
.text_title{
  padding-right: 10rpx;
}
.text_type{
  width: 115rpx;
  height: 40rpx;
  vertical-align: middle;
  /* margin: 10rpx 0 0 0rpx; */
}
.text_detail{
  clear: left;
  display: block;
  padding-top: 30rpx;
  font-size: 26rpx;
  color: #808080;
  text-align: justify;
}
/* 关注样式 */
.follow_con{
  width: 124rpx;
  height: 56rpx;
  float: right;
}
.follow_img{
  width: 124rpx;
  height: 56rpx;
}
.isfollow{
  border: 1px solid #CECECE;
  font-size: 26rpx;
  color: #B2B2B2;
  text-align: center;
  line-height: 56rpx;
  border-radius:4rpx;
}
.btn{
  height: 60rpx;
}
/* 列表样式 end*/
.footer{
  font-size:22rpx;
  color:rgba(136,136,136,1);
  text-align: center;
}