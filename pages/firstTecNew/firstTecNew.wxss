page{
  background: #f4f4f4;
  width: 750rpx;
  overflow-x: hidden;
}
.project_top{
  width: 100%;
  height: 94rpx;
  background: #fff;
  border-bottom: 1px solid #E5E5E5;
  text-align: center;
  position: fixed;
  top: 0;
  
}
.project_top text{
  display: inline-block;
  width: 56rpx;
  height: 94rpx;
  /* border-bottom: 4rpx solid #008EFF */
}
.project_all{
  margin-right: 130rpx;
}
button{
  display: inline-block;
  border: none;
  font-size: 28rpx;
  line-height: 96rpx;
  color: #353535;
  padding: 0;
  margin: 0;
  background: #fff;
  border-radius: 0px;
  height: 95rpx
}
.project_onlyStyle{
  color: #008EFF!important;
  border-bottom: 4rpx solid #008EFF;
}
button::after{
  border:none;
}
.button-hover{
  background:#fff; 
}
.textStyle{
  border-bottom: 4rpx solid #008EFF
}

