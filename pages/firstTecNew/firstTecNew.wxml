<import src="../tabbar/tabbar.wxml"/>
<template is="tabbar" data="{{tabbar}}"/>
<view class = "project_top">
  <button class = "project_all {{showAll?'project_onlyStyle':''}}" bindtap="handleLogin">全部</button>
  <button class = "project_folow {{!showAll?'project_onlyStyle':''}}" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="handleLogin">关注</button>
  <!-- <text class = "project_folow" bindtap='handleLogin'>关注</text> -->
</view>

<!-- 新闻列表 -->
<view class = "firstTecNew_con">
  <!-- <view class = "loadMore" wx:if="{{refreshload}}">正在刷新...</view> -->
  <view class="list_item" wx:for="{{newsList}}">
    <view class = "head_con">
      <view class = "headImg_con">
        <image src="{{item.public_logo}}" class = "headLogo"></image>
      </view>
      <view class = "name_con">
        <view class = "jigou_name">{{item.public_name}}</view>
        <view class = "jigou_time">
          <text class="time">{{item.date}}</text>
          <text class = "pv_word">阅读量 {{item.pageView}}</text>
        </view>
      </view>
      <view class = "follow_con positionBtn" wx:if="{{!item.focus}}">
        <button class = "btn" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="handleFollow" data-index="{{index}}" data-id="{{item.public_id}}">
          <image src="../../resource/focus.png" class = "follow_img"></image>
        </button>  
      </view>
      <view class = "follow_con isfollow" wx:else>
        已关注
      </view>
    </view >
    <view class="title_type_view">
      <!-- <view class="text_title">{{item.title}}
        <image class="text_type" src="../../resource/cgfb.png"></image>
      </view> -->
    </view>
    <text class="text_detail"  data-id="{{item.id}}" data-type="{{item.type}}" bindtap='goAchievementDel'>【{{item.title}}】{{item.brief}}</text>
    <image class="item_img" src="{{item.cover}}" mode='widthFix' data-id="{{item.id}}" data-type="{{item.type}}" bindtap='goAchievementDel' wx:if="{{item.cover}}"/>
    <view class = "involveTec_con">
      <image src="../../resource/tec.png" class = "tec_img"></image>
      <text class = "tecWord">在流体和固体颗粒存在下进行的装置和过程</text>
    </view>
  </view>
</view>
<view class='footer' wx:if="{{refresh}}">上拉加载更多</view>
<view class='footer' wx:else>没有更多数据了</view>
<view style = "height:40rpx;"></view>